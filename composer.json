{
    "name": "simplesamlphp/xml-cas-module-slate",
    "description": "Slate module for CAS PHP library from SimpleSAMLphp",
    "type": "project",
    "license": "LGPL-2.1-or-later",
    "authors": [
         {
            "name": "Tim van Dijen",
            "email": "tvdijen@gmail.com"
        }
    ],
    "require": {
        "php": "^8.3",
        "ext-dom": "*",

        "simplesamlphp/xml-cas": "~2.3.0",
        "simplesamlphp/xml-common": "~2.5"
    },
    "require-dev": {
        "simplesamlphp/simplesamlphp-test-framework": "~1.11"
    },
    "autoload": {
        "psr-4": {
            "SimpleSAML\\Slate\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "SimpleSAML\\Test\\Slate\\": "tests/Slate/"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "v2.0.x-dev"
        }
    },
    "config": {
        "allow-plugins": {
            "composer/package-versions-deprecated": true,
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "phpstan/extension-installer": true,
            "simplesamlphp/composer-xmlprovider-installer": true
        }
    },
    "scripts": {
        "pre-commit": [
            "vendor/bin/phpcs -p",
            "vendor/bin/composer-require-checker check composer.json",
            "vendor/bin/phpstan analyze -c phpstan.neon",
            "vendor/bin/phpstan analyze -c phpstan-dev.neon",
            "vendor/bin/composer-unused",
            "vendor/bin/phpunit --no-coverage --testdox"
        ]
    }
}
